<%- include('partials/header') %>

<body>
    <nav class="navbar navbar-light bg-ligit nav-color">
        <a class="navbar-brand" href="#">
            <img src="/logo.png" width="90" height="90" class="d-inline-block align-top" alt="">
            <h1 style="display:inline;">National Institue Of Technology,Patna</h1>
        </a>
    </nav>
    <br><br>
    <div>
        <h6>Book Search Results</h6>
        <h3>Welcome <%= name %> </h3>
        <p>Here is the search result for your book search.</p>

        <table>
            <caption>Found <%=results.length%> Results</caption>
            <tr>
                <th scope="col">Book Id</th>
                <th scope="col">Book Name</th>
                <th scope="col">Book Author</th>
            </tr>

            <% for(var i=0; i < results.length; i++) { %>
            <tr>
            <th scope="row"><%= results[i].bookId %></th>
            <td><%= results[i].bookName %></td>
            <td><%= results[i].bookAuthor %></td>
            </tr>
            <% } %>
            
        </table>
       
        <a class="btn btn-primary" href="/logout" role="button">Logout</a>
    </div>


    




</body>

<%- include('partials/footer') %>

