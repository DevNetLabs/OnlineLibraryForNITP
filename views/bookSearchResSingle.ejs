<%- include('partials/header') %>



    <div class="ui container">
        <h6>Book Search Results</h6>
        <h3>Welcome <%= name %>
        </h3>
        <% if (file !==null && file.length>0) { %>
           <h2>Here's the book you're searching for.</h2>
           <a href="<%=downloadLink%>" target="blank" role="button" class="large ui inverted green button">Download your book here.</a>
        <% } else { %>
         <h2>Sorry, We couldn't find your requested book in the database!</h2>
        <% } %>
        

        <a class="large ui inverted primary button" href="/logout" role="button">Logout</a>
    </div>









    <%- include('partials/footer') %>