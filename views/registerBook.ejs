  <h2 style="text-align:center">Enter Book details</h2>
  <br><br>

  <div class="container-md register-block">
    <form action="/registerBook" method="POST">
        <div class="form-group">
            <label for="bookId">Book Id</label>
            <input type="text" class="form-control" name="bookId" maxlength="30">
            <small class="form-text text-muted">Enter the bookID</small>
        </div>
        <div class="form-group">
            <label for="bookName">Book Name</label>
            <input type="text" class="form-control" name="bookName" maxlength="30">
            <small class="form-text text-muted">Please enter the book's name in all CAPS.</small>
        </div>
        <div class="form-group">
            <label for="qty">Quantity</label>
            <input type="number" class="form-control" min="1" name="qty">
            <small class="form-text text-muted">Please enter the number of books.</small>
        </div>
        <div class="form-group">
            <label for="bookAuthor">Author Name</label>
            <input type="text" class="form-control" name="bookAuthor">
            <small class="form-text text-muted">The name of this book's author.</small>
        </div>
        <div class="form-group">
            <label for="bookSubject">Book Subject</label>
            <input type="text" class="form-control" name="bookSubject">
            <small class="form-text text-muted">The subject of this book.</small>
        </div>
      
        <div class="form-group">
            <label for="bookTags">Book Tags</label>
            
            <input type="text" class="form-control" data-role="tagsinput" name="bookTags" value="go,come">
            <small class="form-text text-muted">The tags to help search this book.</small>
        </div>
        <br><br>
        <div class="center">
          <button type="submit" class="btn btn-dark">Register the book.</button>
        </div>
    </form>
  </div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="http://bootstrap-tagsinput.github.io/bootstrap-tagsinput/dist/bootstrap-tagsinput.min.js"></script>

